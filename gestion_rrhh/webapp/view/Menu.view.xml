<mvc:View
    controllerName="logaligroup.gestionrrhh.controller.Menu"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Page id="page1" title="{i18n>menuTitle}">
        <content>
            <Panel id="panelEmp" headerText="{i18n>empleados}" expandable="true" expanded="true">
				<GenericTile id="tile1" headerImage="sap-icon://add-employee" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="navToCreateEmployee">
					<TileContent id="tileFooter1" footer="{i18n>crearEmpleado}">
					</TileContent>
				</GenericTile> 
				<GenericTile id="tile2" headerImage="sap-icon://employee-lookup" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="navToShowEmployee">
					<TileContent id="tileFooter2" footer="{i18n>verEmpleados}">
					</TileContent>
				</GenericTile>         
            </Panel>
            <Panel id="panelPed" headerText="{i18n>pedidos}"  expandable="true" expanded="true">
                <GenericTile id="linkFirmarPedido"  headerImage="sap-icon://signature" class="sapUiTinyMarginBegin sapUiTinyMarginTop" url="https://61c38317trial-dev-logali-approuter.cfapps.us10.hana.ondemand.com/logaligroupEmployees/index.html">
					<TileContent id="tileFooter3" footer="{i18n>firmarPedido}">
					</TileContent>
				</GenericTile>
            </Panel>
        </content>    
    </Page>
</mvc:View>